<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/questionlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.basicbake.Quizpart1Activity" >

    <WebView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    

    <Button
        android:id="@+id/btnoptionA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="#ffff00"
        android:text="@string/option" />

    <Button
        android:id="@+id/btnoptionB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnoptionA"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="#ffff00"
        android:text="@string/option" />

    <Button
        android:id="@+id/btnoptionC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnoptionB"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="#ffff00"
        android:text="@string/option" />

    <Button
        android:id="@+id/btnoptionD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnoptionC"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="#ffff00"
        android:visibility="invisible"
        android:text="@string/option" />
    <Button
        android:id="@+id/btnpart1next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnoptionD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:visibility="invisible"
        android:background="#ff69b4"
        android:text="@string/next" />
    <WebView
        android:id="@+id/explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnpart1next"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

</RelativeLayout>
