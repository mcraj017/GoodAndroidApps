<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.learnmandarin.FamilyExerciseActivity" >
     <ImageButton
        android:id="@+id/familyOptionbtnA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/familyMandarinWordImage"
        android:layout_marginTop="16dp"
        android:src="@drawable/optiona" />

    <ImageButton
        android:id="@+id/familyOptionbtnB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/familyOptionbtnA"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/optionb" />

    <ImageButton
        android:id="@+id/familyOptionbtnD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/familyOptionbtnC"
        android:layout_alignRight="@+id/familyOptionbtnB"
        android:src="@drawable/optiond" />

    <ImageView
        android:id="@+id/familyMandarinWordImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mandarinwordexercise" />

    <ImageButton
        android:id="@+id/familyOptionbtnC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/familyOptionbtnA"
        android:layout_below="@+id/familyOptionbtnA"
        android:src="@drawable/optionc" />

    <Button
        android:id="@+id/familyNextExercisebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/familyOptionbtnD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="@string/Start" />
    
       <ImageButton
        android:id="@+id/Playfamily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/familyOptionbtnC"
        android:layout_centerHorizontal="true"
        android:src="@drawable/playimg" />

</RelativeLayout>
