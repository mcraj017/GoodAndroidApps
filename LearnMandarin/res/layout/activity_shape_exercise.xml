<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.learnmandarin.ShapeExerciseActivity" >
    
     <ImageButton
        android:id="@+id/shapeOptionbtnA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/shapeMandarinWordImage"
        android:layout_marginTop="16dp"
        android:src="@drawable/optiona" />

    <ImageButton
        android:id="@+id/shapeOptionbtnB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/shapeOptionbtnA"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/optionb" />

    <ImageButton
        android:id="@+id/shapeOptionbtnD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/shapeOptionbtnC"
        android:layout_alignRight="@+id/shapeOptionbtnB"
        android:src="@drawable/optiond" />

    <ImageView
        android:id="@+id/shapeMandarinWordImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mandarinwordexercise" />

    <ImageButton
        android:id="@+id/shapeOptionbtnC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shapeOptionbtnA"
        android:layout_below="@+id/shapeOptionbtnA"
        android:src="@drawable/optionc" />

    <Button
        android:id="@+id/shapeNextExercisebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shapeOptionbtnD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:text="@string/Start" />
    
       <ImageButton
        android:id="@+id/Playshape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shapeOptionbtnC"
        android:layout_centerHorizontal="true"
        android:src="@drawable/playimg" />

</RelativeLayout>
