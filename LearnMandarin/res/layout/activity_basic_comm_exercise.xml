<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.learnmandarin.BasicCommExerciseActivity" >
    
     <ImageButton
        android:id="@+id/basiccommOptionbtnA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/basiccommMandarinWordImage"
        android:layout_marginTop="16dp"
        android:src="@drawable/optiona" />

    <ImageButton
        android:id="@+id/basiccommOptionbtnB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/basiccommOptionbtnA"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/optionb" />

    <ImageButton
        android:id="@+id/basiccommOptionbtnD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/basiccommOptionbtnC"
        android:layout_alignRight="@+id/basiccommOptionbtnB"
        android:src="@drawable/optiond" />

    <ImageView
        android:id="@+id/basiccommMandarinWordImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mandarinwordexercise" />

    <ImageButton
        android:id="@+id/basiccommOptionbtnC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/basiccommOptionbtnA"
        android:layout_below="@+id/basiccommOptionbtnA"
        android:src="@drawable/optionc" />

    <Button
        android:id="@+id/basiccommNextExercisebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:text="@string/Start" />

    <ImageButton
        android:id="@+id/Playbasiccomm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/basiccommNextExercisebtn"
        android:layout_centerHorizontal="true"
        android:src="@drawable/playimg" />

</RelativeLayout>
